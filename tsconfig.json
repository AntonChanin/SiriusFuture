{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "preserveConstEnums": true,
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "components/**/*",
    "pages/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
